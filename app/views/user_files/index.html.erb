<h1>Listing user_files</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>File</th>
      <th>File status</th>
      <th>File type</th>
      <th>Title</th>
      <th>Producer</th>
      <th>Creator</th>
      <th>Creation date</th>
      <th>Mod date</th>
      <th>Metadata</th>
      <th>Page count</th>
      <th>Pdf version</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_files.each do |user_file| %>
      <tr>
        <td><%= user_file.user %></td>
        <td><%= user_file.file %></td>
        <td><%= user_file.file_status %></td>
        <td><%= user_file.file_type %></td>
        <td><%= user_file.title %></td>
        <td><%= user_file.producer %></td>
        <td><%= user_file.creator %></td>
        <td><%= user_file.creation_date %></td>
        <td><%= user_file.mod_date %></td>
        <td><%= user_file.metadata %></td>
        <td><%= user_file.page_count %></td>
        <td><%= user_file.pdf_version %></td>
        <td><%= link_to 'Show', user_file %></td>
        <td><%= link_to 'Edit', edit_user_file_path(user_file) %></td>
        <td><%= link_to 'Destroy', user_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

